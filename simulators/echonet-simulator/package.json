{
  "name": "echonet-simulator",
  "version": "1.0.0",
  "description": "ECHONET Lite Simulator for OCPP Gateway Testing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t echonet-simulator .",
    "docker:run": "docker run -p 3610:3610 -p 8080:8080 echonet-simulator"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "yaml": "^2.3.4",
    "winston": "^3.11.0",
    "commander": "^11.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "keywords": [
    "echonet-lite",
    "simulator",
    "ocpp",
    "gateway",
    "testing"
  ],
  "author": "OCPP Gateway Team",
  "license": "MIT"
} 